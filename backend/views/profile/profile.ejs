<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile / SnapTalk</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-track {
      background: #f1f5f9;
    }

    ::-webkit-scrollbar-thumb {
      background: #cbd5e1;
      border-radius: 3px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #94a3b8;
    }
  </style>
</head>

<body class="bg-slate-100 text-gray-800 font-sans pb-20 lg:pb-0">
  <div class="container mx-auto flex">

    <div id="sidebar-partial-call" class="hidden lg:block">
      <%- include('../partials/sidebar') %>
    </div>

    <main class="w-full lg:w-1/2 border-l border-r border-slate-200">
      <!-- Profile Header -->
      <div class="sticky top-0 z-10 flex items-center space-x-4 bg-slate-100/80 backdrop-blur-md px-4 py-2 border-b border-slate-200">
        <a href="/" class="p-2 rounded-full hover:bg-slate-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
        </a>
        <div>
          <h2 class="text-xl font-bold text-gray-900 capitalize"><%= user.name %></h2>
          <p class="text-sm text-gray-500"><%= profile.uploads.length>0 ? profile.uploads.length : "" %></p>
        </div>
      </div>

      <!-- Profile Details -->
      <div>
        <!-- Banner Image -->
        <div id="banner-div" class="relative h-[130px] bg-slate-400 bg-cover bg-center" style="background-image: url('<%= profile.banner.url %>');">
          <div id="banner-spinner-partial-call">
            <%- include('../partials/spinner') %>
          </div>
          <buttons id="banner-upload-icon" class="absolute bottom-2 right-2 flex h-9 w-9 items-center justify-center rounded-full bg-white/90 shadow-lg transition hover:bg-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <input type="file" id="banner-pic-input" class="sr-only" accept="image/*">
            </button>
        </div>

        <!-- Profile Info -->
        <div class="p-4">
          <div class="flex justify-between items-start">
            <img src="<%= profile.profilepic.url %>" alt="Avatar" class="z-10 rounded-full h-24 w-24 md:h-32 md:w-32 -mt-16 border-4 border-slate-100">
            <div class="flex items-center space-x-2">
              <button class="p-2 rounded-full hover:bg-slate-200">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.096 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </button>
              <button id="edit-profile-btn" class="font-semibold py-2 px-4 border-2 border-slate-300 rounded-full hover:bg-slate-200 transition-colors">
                Edit Profile
              </button>
            </div>
          </div>

          <div class="">
            <h2 class="text-2xl font-bold text-gray-900 capitalize"><%= user.name %></h2>
            <p class="text-gray-500">@<%= user.username %></p>
          </div>

          <p class="mt-2 text-gray-700">
            <%= profile.bio %>
          </p>

          <div id="link">
            <a href="<%= profile.link.url  %>" target="_blank" class="text-blue-600"><%= profile.link.label  %></a>
          </div>

          <div class="mt-2 flex space-x-6 text-gray-600">
            <div>
              <span class="font-bold text-gray-900"><%= user.followingCount %></span> Following
            </div>
            <div>
              <span class="font-bold text-gray-900"><%= user.followersCount %></span> Followers
            </div>
          </div>
        </div>
      </div>

      <!-- Profile Content Tabs -->
      <div id="tab-controls" class="flex justify-around border-slate-200">
        <button data-target="#media-section" class="tab-btn w-full text-center py-4">All</button>
        <!-- <button data-target="#thoughts-section" class="tab-btn w-full text-center py-4">Thoughts</button> -->
        <button data-target="#liked-section" class="tab-btn w-full text-center py-4">Likes</button>
      </div>

      <!-- User's Posts Grid -->
      <div class="tab-content">
        <%- include("../partials/postTemplate") %>

        <!-- liked content section -->
        <div id="liked-section" class="tab-pane hidden space-y-6 px-2 pb-4">
          <h2>Nothing here</h2>
        </div>
      </div>

    </main>

    <%- include('../partials/rightColumn') %>

  </div>

  <%- include('../partials/mobileNavigationBar') %>

  <%- include('editProfile') %>

  <script src="/js/profile.js"></script>
  <script src="/js/postEngagements.js"></script>
</body>

</html>