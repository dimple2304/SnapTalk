<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>What's happening?</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="flex min-h-screen bg-white">

    <div class="sidebar-partial-call hidden lg:block">
      <%- include('partials/sidebar') %>
    </div>

    <main class="flex-1 max-w-3xl border-x border-slate-200">

      <header class="sticky top-0 z-10 flex items-center p-4 bg-white/80 backdrop-blur-sm border-b border-slate-200">
        <a href="<%= backTo %>" class="postPageBackBtn p-2 rounded-full hover:bg-slate-100">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-slate-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        </a>
        <h2 class="ml-4 text-xl font-bold text-slate-800">Post</h2>
      </header>

      <article class="border-b border-slate-200">
        <% if(post){ %>
        <%- include('partials/postTemplate', {post, source, profileUsername}) %>
        <% } %>
      </article>

      <form class="flex space-x-4 p-4">
        <img class="h-10 w-10 rounded-full object-cover" src="<%= profile?.profilepic.url ? profile.profilepic?.url : 'https://placehold.co/100x100' %>" alt="Your Avatar">
        <div class="flex-1">
          <input type="text" class="comment-input w-full p-3 bg-slate-100 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Post your comment"></input>
          <span id="comment-error" class="error text-red-600 text-sm"></span>
          <div class="flex justify-end mt-2">
            <button type="submit" disabled="true" class="comment-post-btn bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-6 rounded-full disabled:opacity-50 transition-colors">
              Post comment
              <div id="commentPostSpinner">
                <%- include('partials/spinner') %>
              </div>
            </button>
          </div>
        </div>
      </form>

      <section class="">
        <% if(post?.comments?.length > 0){ %>
        <% enrichedComments.forEach(element => { %>
        <article class="flex space-x-4 p-3 hover:bg-slate-50 transition-colors group">
          <img class="h-10 w-10 rounded-full object-cover flex-shrink-0" src="<%= element.profile?.profilepic?.url ? element.profile.profilepic.url : `https://placehold.co/128x128/1d4ed8/ffffff?text=${user.name.split('')[0].toUpperCase()}` %>" alt="<%= element.user.name %>'s Avatar">

          <div class="flex-1">
            <div class="flex justify-between items-start">

              <div class="flex items-center space-x-2">
                <h4 class="font-bold text-slate-800"><%= element.user.name %></h4>
                <span class="text-sm text-slate-500">@<%= element.user.username %></span>
                <span class="comment-time text-gray-400 ml-2 text-sm"><%= element.createdAt %></span>
              </div>

              <% if (element.user._id.toString() === user._id.toString()) { %>
              <div class="commentMenu relative ml-auto">
                <button class="text-slate-400 hover:text-slate-600 p-1 rounded-full hover:bg-slate-200 transition">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
                  </svg>
                </button>

                <div id="menu-<%= element._id %>" class="commentDltBtn hidden absolute right-0 mt-1 w-32 bg-white border border-slate-100 rounded-md shadow-lg z-10">
                  <button type="submit" class="w-full text-left px-4 py-2 text-sm text-red-500 hover:bg-red-50 flex items-center gap-2 rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Delete
                  </button>
                </div>
              </div>
              <% } %>

            </div>

            <p class="mt-1 text-slate-700"><%= element.comment %></p>
          </div>
        </article>
        <% }); %>
        <% } else{ %>
        <p class="text-gray-500 text-center mt-10">No comments yet.</p>
        <% } %>
      </section>

    </main> <%- include('partials/rightColumn') %>

  </div>

  <script src="/js/postEngagements.js"></script>
</body>

</html>

<script>

  function getCommentTime(dateStr) {
    const postTime = new Date(dateStr);
    const now = new Date();
    const diffInSeconds = Math.floor(now - postTime) / 1000;

    if (diffInSeconds < 60) return "Just now";
    if (diffInSeconds < 3600) return Math.floor(diffInSeconds / 60) + "m";
    if (diffInSeconds < 86400) return Math.floor(diffInSeconds / 3600) + "h";
    if (diffInSeconds < 604800) return Math.floor(diffInSeconds / 86400) + "d";
    return Math.floor(diffInSeconds / 604800) + "w";
  }

  document.querySelectorAll(".comment-time").forEach(el => {
    el.innerHTML = getCommentTime(el.innerHTML);
  })

  const commentMenu = document.querySelectorAll(".commentMenu");
  const commentDltBtn = document.querySelectorAll(".commentDltBtn");
  commentMenu.forEach((el, i)  => {
    el.addEventListener("click", function() {
      commentDltBtn[i].classList.toggle("hidden");
    })
  })
</script>