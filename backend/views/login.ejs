<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-800 flex items-center justify-center min-h-screen">
  <dialog open id="login-dialog"
    class="relative w-[35%] max-w-[45%] mx-auto bg-black text-white rounded-2xl border-0 backdrop:bg-black backdrop:bg-opacity-50">

    <div class="p-6 py-2 flex flex-col h-full">

      <!-- Header -->
      <div class="flex justify-between items-center w-full mb-2">
        <div class="w-8"></div> <!-- spacer -->
        <div class="flex items-center justify-center h-[120px] w-[120px]">
          <img src="/images/logo.png" alt="logo" class="object-contain">
        </div>
        <button id="loginModal-close"
          class="w-8 h-8 flex items-center justify-center text-white hover:bg-gray-800 rounded-full transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>

      <!-- Login Form with fixed height & bottom button -->
      <div id="loginForm" class="relative min-h-[490px] flex flex-col">
        <div class="mb-4 text-left">
          <h1 class="text-3xl font-bold text-white mb-2">Sign in to your account</h1>
        </div>

        <form id="login" action="" class="flex flex-col gap-4 flex-1">
          <!-- Email -->
          <div class="flex flex-col gap-2">
            <input type="email" id="loginEmail" name="email" placeholder="Email"
              class="w-full px-4 py-4 bg-black border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500">
            <span id="loginEmailError" class="error text-red-600 text-sm"></span>
          </div>

          <!-- Password -->
          <div class="flex flex-col gap-2">
            <div class="relative">
              <input type="password" id="loginPassword" name="password" placeholder="Password"
                class="w-full px-4 py-4 bg-black border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 font-semibold">
            </div>
            <span id="loginPasswordError" class="error text-red-600 text-sm"></span>
          </div>

          <!-- Forgot Password -->
          <div class="text-right mb-4">
            <button type="button" id="forgotPassword"
              class="text-blue-500 text-sm hover:underline">Forgot Password?</button>
          </div>

          <!-- Submit Button -->
          <div class="absolute bottom-12 w-full">
            <button id="submit-btn" type="submit"
              class="w-full bg-white text-black font-bold py-4 px-6 rounded-full hover:bg-gray-200 transition-colors">
              Sign in
            </button>
          </div>

          <!-- "Don't have an account? Sign up" below button -->
          <div class="absolute bottom-4 w-full text-center">
            <span class="text-gray-400">Don't have an account? </span>
            <button type="button" id="signupRedirect"
              class="text-blue-500 font-semibold hover:underline">Sign up</button>
          </div>
        </form>
      </div>

    </div>
  </dialog>


  <script src="/js/login.js"></script>
</body>

</html>
