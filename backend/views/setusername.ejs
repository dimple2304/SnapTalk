<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Set Username / SnapTalk</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-100 flex items-center justify-center min-h-screen p-4 overflow-hidden">
  <dialog open id="username-modal" class="relative w-full max-w-md bg-white text-gray-900 rounded-2xl shadow-xl border-0">
    <div class="p-8">

      <div id="spinner-partial">
        <%- include('partials/spinner')  %>
      </div>

      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900">Choose your username</h2>
        <p class="mt-2 text-gray-500">Your username is unique and will be visible to others on your profile. You can always change it later.</p>
      </div>

      <form id="username-form" class="mt-8 space-y-6">
        <div>
          <label for="username" class="block mb-2 text-sm font-bold text-gray-700">Username</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 font-semibold">@</span>
            </div>
            <input type="text" id="username" name="username" placeholder="your_unique_username" required class="w-full pl-7 pr-4 py-3 bg-slate-100 border border-slate-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition">
          </div>
          <p id="username-error" class="text-sm text-red-600 mt-2"></p>
        </div>

        <div>
          <button id="submit-btn" type="submit" class="w-full bg-gray-900 text-white font-bold text-lg py-3 px-4 rounded-full hover:bg-gray-800 transition-colors disabled:bg-slate-300 disabled:text-slate-500 disabled:cursor-not-allowed">
            Save and Continue
          </button>
        </div>
      </form>
    </div>
  </dialog>


  <script>
    const submitBtn = document.querySelector("#submit-btn");
    const usernameError = document.querySelector("#username-error");
    const username = document.querySelector("#username");
    const spinner = document.querySelector("#spinner");

    submitBtn.addEventListener("click", async function(e) {
      e.preventDefault();
      try {
        usernameError.innerHTML = "";
        const usernameVal = username.value.trim();

        spinner.classList.remove("hidden");

        if (!usernameVal) {
          usernameError.innerHTML = "Username is required!";
          spinner.classList.add("hidden");
          return;
        }

        const res = await fetch("/api/auth/setting-username", {
          method: "PATCH",
          headers: {
            "Content-Type": "Application/json"
          },
          body: JSON.stringify({
            username: usernameVal
          })
        })

        const data = await res.json();
        spinner.classList.add("hidden");

        if (!res.ok) {
          usernameError.innerHTML = data.message;
        } else {

          window.location.href = data.redirectUrl;
        }

      } catch (err) {
        usernameError.innerHTML = "Something went wrong!";
        spinner.classList.add("hidden");
        return;
      }
    })
  </script>
</body>

</html>