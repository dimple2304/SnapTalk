<!-- 
  views/partials/sidebar.ejs
  This is the reusable sidebar for SnapTalk.
  ADDED `flex-shrink-0` to prevent it from shrinking and breaking the layout.
-->
<aside class="h-screen sticky top-0 flex flex-col justify-between p-2 md:p-4 lg:w-64 flex-shrink-0">
  <div>
    <!-- Logo -->
    <div class="p-3 mb-2">
      <h1 class="text-2xl font-bold text-white">SnapTalk</h1>
    </div>

    <!-- Navigation Links -->
    <nav class="flex flex-col space-y-2">
      <a href="#" class="flex items-center p-3 text-white text-lg font-semibold rounded-full hover:bg-gray-800 transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-4"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        Home
      </a>
      <a href="#" class="flex items-center p-3 text-white text-lg rounded-full hover:bg-gray-800 transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-4"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
        Explore
      </a>
      <a href="#" class="flex items-center p-3 text-white text-lg rounded-full hover:bg-gray-800 transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-4"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/></svg>
        Notifications
      </a>
      <a href="#" class="flex items-center p-3 text-white text-lg rounded-full hover:bg-gray-800 transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-4"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
        Messages
      </a>
      <a href="#" class="flex items-center p-3 text-white text-lg rounded-full hover:bg-gray-800 transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-4"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        Profile
      </a>
    </nav>

    <!-- Snap Button -->
    <button class="mt-6 w-full bg-blue-500 hover:bg-blue-600 text-white font-bold text-lg py-3 px-4 rounded-full transition-colors duration-200">
      Snap
    </button>
  </div>

  <!-- User Profile Section -->
  <div class="mb-4">
    <a href="#" class="flex items-center p-3 rounded-full hover:bg-gray-800 transition-colors duration-200">
      <img src="https://placehold.co/40x40/7e22ce/ffffff?text=<%=user.name.split("")[0].toUpperCase()%>" alt="Your Avatar" class="rounded-full">
      <div class="ml-3 hidden lg:block">
        <p class="font-bold text-white capitalize"><%=user.name%></p>
        <p class="text-sm text-gray-400">@<%= user.email.split("@")[0] %></p>
      </div>
    </a>
  </div>
</aside>