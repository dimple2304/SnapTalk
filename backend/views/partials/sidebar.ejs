    <div class="mt-8 px-2">
      <button class="w-full bg-gradient-to-r from-purple-500 to-indigo-600 text-white font-bold text-lg py-3 px-4 rounded-lg hover:opacity-90 transform hover:scale-105 transition-all duration-200">
        New Post
      </button>
    </div>
  </div>

  <div></div>
</aside>

<!-- script to toggle buttons activeness -->
<script>
  const homeBtn = document.querySelector("#home-btn");
  const exploreBtn = document.querySelector("#explore-btn");
  const messageBtn = document.querySelector("#message-btn");
  const notificationBtn = document.querySelector("#notification-btn");
  const profileBtn = document.querySelector("#profile-btn");
  const settingBtn = document.querySelector("#setting-btn");

  if (window.location.pathname === "/feed") {
    homeBtn.classList.remove("text-gray-600", "hover:bg-slate-200", "hover:text-gray-900");
    homeBtn.classList.add("active-tab");
  } else if (window.location.pathname === "/explore") {
    exploreBtn.classList.remove("text-gray-600", "hover:bg-slate-200", "hover:text-gray-900")
    exploreBtn.classList.add("active-tab")
  } else if (window.location.pathname === "/message") {
    messageBtn.classList.remove("text-gray-600", "hover:bg-slate-200", "hover:text-gray-900")
    messageBtn.classList.add("active-tab")
  } else if (window.location.pathname === "/notifications") {
    notificationBtn.classList.remove("text-gray-600", "hover:bg-slate-200", "hover:text-gray-900")
    notificationBtn.classList.add("active-tab")
  } else if (window.location.pathname === "/profile") {
    profileBtn.classList.remove("text-gray-600", "hover:bg-slate-200", "hover:text-gray-900")
    profileBtn.classList.add("active-tab")
  } else if (window.location.pathname === "/setting", "hover:bg-slate-200", "hover:text-gray-900") {
    settingBtn.classList.remove("text-gray-600")
    settingBtn.classList.add("active-tab")
  }
</script>